.header
  margin-bottom 74px
  padding 24px

  &__container
    display flex
    flex-wrap nowrap
    justify-content space-between
    align-items center
    max-width 1280px
    margin 0 auto

  &__link
    width 80px
    height 24px

  &__logo
    display block
    width 100%
    height auto

@media (min-width: 1200px)
  .header
    margin-bottom 20px
    padding 65px 80px

    &__link
      width 166px
      height 49px
