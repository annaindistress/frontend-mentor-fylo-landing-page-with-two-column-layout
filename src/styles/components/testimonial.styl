.testimonial
  position relative
  max-width 280px
  margin 0
  padding 38px 12px 18px 25px
  text-align left
  background-color color-basic-white
  border-radius 4px
  box-shadow 0 0 8px 4px rgba(56, 56, 56, .0459)

  &::before
    content ''
    position absolute
    top 22px
    left 28px
    display block
    width 13px
    height 12px
    background-image url('../images/icon-quotes.svg')
    background-repeat no-repeat
    background-position center
    background-size contain

  &__text
    margin 0 0 12px
    font-size 10px
    line-height 1.81
    letter-spacing .38px

  &__author
    display grid
    grid-template-columns 24px 1fr
    gap 2px 8px
    font-style normal

  &__image
    grid-row 1 / 3
    width 100%
    height auto
    border-radius 50%

  &__name
    font-family font-fancy
    font-weight 700
    font-size 9px
    line-height 1.4
    letter-spacing .45px

  &__occupation
    font-size 6px
    line-height 1.9
    letter-spacing .3px

@media (min-width: 1200px)
  .testimonial
    max-width 400px
    padding 49px 34px 26px
    border-radius 5px
    box-shadow 0 0 10px 5px rgba(56, 56, 56, .0459)

    &::before
      top 30px
      left 33px

    &__text
      margin-bottom 16px
      font-size 13px
      line-height 1.77
      letter-spacing .5px

    &__author
      grid-template-columns 32px 1fr
      gap 0 8px

    &__image
      grid-row 1 / 3
      border-radius 50%

    &__name
      font-size 11px
      letter-spacing .55px

    &__occupation
      font-size 8px
      line-height 1.88
      letter-spacing .4px
